<!-- JavaScript kodu -->
<script>
    // Geçen süreyi hesaplamak için fonksiyon
    function calculateElapsedTime(element) {
        var createdDate = new Date(element.getAttribute("data-created-date"));
        var now = new Date();
        var elapsed = now - createdDate; // Geçen süre milisaniye cinsinden

        var days = Math.floor(elapsed / (1000 * 60 * 60 * 24));
        var hours = Math.floor((elapsed % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((elapsed % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((elapsed % (1000 * 60)) / 1000);

        var timeAgo = "";

        if (days > 0) {
            timeAgo += days + "d ";
        }
        if (hours > 0) {
            timeAgo += hours + "h ";
        }
        if (minutes > 0) {
            timeAgo += minutes + "m ";
        }
        if (seconds > 0) {
            timeAgo += seconds + "s";
        }

        element.innerText = timeAgo + " ago";
    }

    // Sayfa yüklendiğinde tüm 'comment-time' elemanlarını işleyin
    document.addEventListener("DOMContentLoaded", function() {
        var commentTimes = document.getElementsByClassName("comment-time");
        for (var i = 0; i < commentTimes.length; i++) {
            calculateElapsedTime(commentTimes[i]);
        }
    });
</script>