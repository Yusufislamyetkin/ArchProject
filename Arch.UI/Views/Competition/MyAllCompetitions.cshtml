@model List<Arch.EntityLayer.Entities.Competition>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<!DOCTYPE html>



<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | User Profile</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <section class="content-header">
    </section>

    <div class="wrapper">

        <section class="content">

            <div class="tab-pane" id="timeline">




                <div class="timeline timeline-inverse">

                    @foreach (var item in Model)
                    {



                        <div>
                            <i class="fas fa-comments bg-purple"></i>

                            <div class="timeline-item">


                                <h3 class="timeline-header">   @item.Name </h3>


                                <div class="timeline-body">

                                    <table>
                                    
                                        <tr>
                                            <td>
                                                <div class="timeline-body">
                                                    <h4 class="timeline-header">Yarışma Açıklaması:</h4>
                                                    <p>@item.Description</p>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="timeline-body">
                                                    <h4 class="timeline-header">Yarışma Bitiş Tarihi:</h4>
                                                    <p>@item.EndDate</p>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="timeline-body">
                                                    <h5 class="timeline-header">Yarışma İçin Belirlenen Tutar:</h5>
                                                    <p>@item.Price TL</p>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>

                                </div>


                                <div class="timeline-footer">


                                    @if (item.Status == 0)
                                    {
                                        <span class="btn btn-success btn-flat btn-sm rounded-pill">Onaylanması bekleniyor.</span>

                                    }

                                    @if (item.Status == 1)
                                    {
                                       
                                         <span class="btn btn-success btn-flat btn-sm rounded-pill">Ödeme yapmanız bekleniyor.</span>
                                          <a href="/Competition/Pay/@item.Id" class="btn btn-success btn-flat btn-sm">Ödeme yap.</a>
                                    }

                                    @if (item.Status == 2)
                                    {
                                        <span class="btn btn-success btn-flat btn-sm rounded-pill">Yarışma devam ediyor.</span>
                                        <a href="/Blog/GetBlogWithCompetitionId/@item.Id" class="btn btn-warning btn-flat btn-sm">Yarışmaya git</a>
                                    }
                                    @if (item.Status == 3)
                                    {
                                        <span class="btn btn-success btn-flat btn-sm rounded-pill">Yarışma süresi bitti, yarışma kapandı.</span>
                                        <a href="/Blog/GetBlogWithCompetitionId/@item.Id" class="btn btn-warning btn-flat btn-sm">Yarışmaya git</a>
                                    }

                                </div>
                            </div>

                        </div>
                    }
                    <!-- END timeline item -->
                    <div>
                        <i class="far fa-clock bg-gray"></i>
                    </div>
                </div>

            </div>
        </section>
        <!-- /.content -->
    </div>
</body>
</html>
